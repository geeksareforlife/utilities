{
    "name": "geeksareforlife/utilities",
    "description": "Various general purpose utilities",
    "type": "library",
    "homepage": "https://github.com/geeksareforlife/utilities",
    "license": "MIT",
    "authors": [
        {
            "name": "James Hayward",
            "email": "jhayward1980@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "GeeksAreForLife\\Utilities\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "vimeo/psalm": "^3.16"
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testdox --colors=always",
        "analyse": "vendor/bin/psalm"
    }
}
